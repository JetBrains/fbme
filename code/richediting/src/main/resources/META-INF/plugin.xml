<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>fbme.richediting</id>
    <name>FBME - Rich Editing</name>
    <description>Rich editing support for IEC 61499 systems</description>
    <version>0.1</version>
    <vendor url="https://github.com/JetBrains/fbme">FBME</vendor>

    <depends>fbme.platform</depends>
    <depends>fbme.scenes</depends>

    <extensions defaultExtensionNs="com.intellij">
        <mps.LanguageLibrary dir="/languages"/>
        <notificationGroup displayType="BALLOON" id="Custom" key="notification.group.name" />
    </extensions>

    <actions>
        <group id="richediting.RichEditorPopupGroup">
            <action id="richediting.AddConstantToPort"
                    class="org.fbme.ide.richediting.actions.network.AddConstantToPortAction"
                    text="Add Constant"/>
            <action id="richediting.AddStateAction"
                    class="org.fbme.ide.richediting.actions.ecc.AddStateActionAction"
                    text="Add Action"/>
            <action id="richediting.DeleteStateAction"
                    class="org.fbme.ide.richediting.actions.ecc.DeleteStateActionAction"
                    text="Delete Action"/>
            <action id="richediting.AlgorithmCloseOpenAction"
                    class="org.fbme.ide.richediting.actions.ecc.AlgorithmBodyVisibilityAction"/>
            <action id="richediting.Collapse"
                    class="org.fbme.ide.richediting.actions.network.expand.CollapseAction"
                    text="Collapse"/>
            <action id="richediting.Expand"
                    class="org.fbme.ide.richediting.actions.network.expand.ExpandAction"
                    text="Expand"/>
            <action id="richediting.ChangeType"
                    class="org.fbme.ide.richediting.actions.network.ChangeTypeAction"
                    text="ChangeType"/>
            <action id="richediting.ExtractNet"
                    class="org.fbme.ide.richediting.actions.network.expand.ExpandAction"
                    text="Extract Network"/>
            <action id="richediting."
                    class="org.fbme.ide.richediting.actions.network.expand.ExpandAction"
                    text="Box in Composite"/>
            <action id="richediting.HideAllAlgorthmBody"
                    class="org.fbme.ide.richediting.actions.ecc.AllAlgorithmBodyVisibilityAction$Hide"
                    text="Hide All Algorithm Bodies"/>
            <action id="richediting.ShowAllAlgorthmBody"
                    class="org.fbme.ide.richediting.actions.ecc.AllAlgorithmBodyVisibilityAction$Show"
                    text="Show All Algorithm Bodies"/>
            <action id="richediting.HideAllStateAction"
                    class="org.fbme.ide.richediting.actions.ecc.AllStateActionVisibilityAction$Hide"
                    text="Hide All State Actions"/>
            <action id="richediting.ShowAllStateAction"
                    class="org.fbme.ide.richediting.actions.ecc.AllStateActionVisibilityAction$Show"
                    text="Show All State Action"/>
            <group id="richediting.ChangeAlgorithmGroup"
                   class="org.fbme.ide.richediting.actions.ecc.ChangeAlgorithmActionGroup"
                   popup="true"
                   text="Change Algorithm"/>
            <group id="richediting.ChangeOutputGroup"
                   class="org.fbme.ide.richediting.actions.ecc.ChangeOutputActionGroup"
                   popup="true"
                   text="Change Output"/>
            <action id="richediting.Relayout"
                    class="org.fbme.ide.richediting.actions.RelayoutAction"
                    text="Relayout"/>
            <action id="richediting.NewAlgorithmAction"
                    class="org.fbme.ide.richediting.actions.ecc.NewAlgorithmAction"
                    text="New Algorithm..."/>
            <add-to-group group-id="jetbrains.mps.ide.editor.actions.EditorPopup_ActionGroup" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
