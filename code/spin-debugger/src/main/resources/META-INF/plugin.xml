<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
    <id>fbme.spinDebugger</id>
    <name>FBME - SPIN Debugger</name>
    <description>Integration of SPIN Verification tool for IEC 61499 systems</description>
    <version>0.1</version>
    <vendor url="https://github.com/JetBrains/fbme">FBME</vendor>

    <depends>fbme.platform</depends>
    <depends>fbme.richediting</depends>
    <depends>fbme.debugger</depends>
    <depends>fbme.smvDebugger</depends>

    <extensions defaultExtensionNs="com.intellij">
        <mps.LanguageLibrary dir="/languages"/>
    </extensions>

    <actions>
        <group id="richediting.RichEditorPopupGroup">
            <action id="spinDebugger.SPINAction"
                    class="org.fbme.spinDebugger.SPINAction"
                    text="Model checking with SPIN"/>
            <add-to-group group-id="jetbrains.mps.ide.editor.actions.EditorPopup_ActionGroup" anchor="last"/>
        </group>
    </actions>
    <extensions defaultExtensionNs="fbme.debugger">
        <traceFactory
                implementation="org.fbme.spinDebugger.execution.SPINTraceFactory"/>
    </extensions>
</idea-plugin>
