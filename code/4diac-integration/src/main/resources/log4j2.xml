<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.fbme.ide.integration.fordiac.deploy.controllers">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%date{DEFAULT}}{yellow}
                %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green}
                %message%n"/>
        </Console>
        <TestAppender name="TestAppender">
            <PatternLayout pattern="%message"/>
        </TestAppender>
    </Appenders>
    <Loggers>
<!--        <Logger name="org.fbme.ide.integration.fordiac.deploy.controllers.AbstractDeviceController"-->
<!--                additivity="false">-->
<!--            <AppenderRef ref="ConsoleAppender"/>-->
<!--        </Logger>-->
        <Root level="info">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>
