<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
  <id>fbme.integration.nxt</id>
  <name>FBME - Nxt Integration</name>
  <description>FBME Integration with NxtStudio and NxtControl</description>
  <version>0.1</version>
  <vendor url="https://github.com/JetBrains/fbme">FBME</vendor>

  <depends>fbme.platform</depends>
  <depends>jetbrains.mps.core</depends>
  <depends>jetbrains.mps.execution.languages</depends>
  <depends>fbme.richediting</depends>
  <depends>fbme.scenes</depends>

  <extensions defaultExtensionNs="com.intellij">
    <mps.LanguageLibrary dir="/languages" />
  </extensions>

  <extensions defaultExtensionNs="fbme.platform">
    <iec61499projectTemplate implementation="org.fbme.integration.nxt.importer.NxtImportProjectTemplate" />
  </extensions>

  <!--
  <extensionPoints>
    <extensionPoint name="BasicFBTypePrinter" interface="org.fbme.integration.nxt.exporter.BasicFBNxtTypePrinter"/>
  </extensionPoints>

  <extensions defaultExtensionNs="fbme.integration.nxt">
    <BasicFBTypePrinter implementation="org.fbme.integration.nxt.exporter.BasicFBNxtTypePrinter"/>
  </extensions
  -->

  <actions>
    <group id="richediting.RichEditorPopupGroup1">
      <action id="org.fbme.integration.nxt.exporter"
              class="org.fbme.integration.nxt.exporter.ExportAction"
              text="Exporting in nxt format"/>
      <add-to-group group-id="jetbrains.mps.ide.editor.actions.EditorPopup_ActionGroup" anchor="last"/>
    </group>
  </actions>

</idea-plugin>
