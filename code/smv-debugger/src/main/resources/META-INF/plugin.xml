<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin>
  <id>fbme.smvDebugger</id>
  <name>FBME - SMV Debugger</name>
  <description>Integration of SMV Verification tool for IEC 61499 systems</description>
  <version>0.1</version>
  <vendor url="https://github.com/JetBrains/fbme">FBME</vendor>

  <depends>fbme.platform</depends>
  <depends>fbme.richediting</depends>
  <depends>fbme.debugger</depends>

   <extensions defaultExtensionNs="com.intellij">
     <projectService serviceImplementation="org.fbme.smvDebugger.execution.executionTraceGeneration.SMVTraceService"></projectService>
       <mps.LanguageLibrary dir="/languages" />

   </extensions>

   <actions>
       <group id="richediting.RichEditorPopupGroup">
       <action id="smvDebugger.SMVUnifiedExecutionTraceAction"
               class="org.fbme.smvDebugger.SMVUnifiedExecutionTraceAction"
               text="Model checking with NuSMV"/>
           <add-to-group group-id="jetbrains.mps.ide.editor.actions.EditorPopup_ActionGroup" anchor="last"/>
       </group>
   </actions>
   <extensions defaultExtensionNs="fbme.debugger">
     <traceFactory
            implementation="org.fbme.smvDebugger.execution.executionTraceGeneration.SMVTraceFactory"/>
   </extensions>


</idea-plugin>
